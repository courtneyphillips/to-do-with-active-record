<h1>Update the <%= @list.name() %> list </h1>

<form action="/list/<%= @list.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename your list:</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update</button>
</form>
<div class="buttons">
  <a class="btn btn-primary btn-md" href="/" role="button">Return Home</a>
</div>
